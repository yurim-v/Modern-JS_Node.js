<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Board </title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>

    </style>
  </head>
  <body>

    <%- include('review-nav.html') %>

    <table class="table">
      <thead>
        <tr class="table-warning">
          <th scope="col">#</th>
          <th scope="col">제목</th>
          <th scope="col">내용</th>
          <th scope="col">날짜</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0 ; i < data.length; i++){ %>
          <tr>
            <td scope="col"><%=  i+1 %> </td>
            <td scope="col"> 
              <a href="/content/<%=data[i].id%>" target="_blank">
                <%= data[i].title %>
              </a>
           </td>
            <td scope="col"> <%= data[i].content %></td>
            <td scope="col"> <%= data[i].date %></td>
            <td scope="col"> 
              <button data-edit="<%=data[i].id%>" class=" edit btn btn-warning"> 수정 </button> 
             </td>
            <td scope="col"> 
             <button data-delete="<%=data[i].id%>" class=" delete btn btn-secondary"> 삭제 </button> 
            </td>

          </tr>
         <% } %>
      </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
    <script>
    
    $('.edit').click(event=>{
      location.href='/edit/'+ event.target.dataset.edit;
    })

    $('.delete').click(event=>{
      $.ajax({
        type : 'post',
        url : '/delete',
        data : {id : event.target.dataset.delete}
      }).done(result=>{
        console.log('ajax 완료');
        event.target.parentNode.parentNode.remove();
      })
    })

    </script>
  </body>
</html>